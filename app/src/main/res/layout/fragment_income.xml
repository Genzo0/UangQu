<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".IncomeFragment"
    android:id="@+id/incomeLayout"
    android:theme="@style/income"
    android:background="#e6e5a3">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/close_desc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9d9b00"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:fontFamily="@font/commissioner_bold"
            android:text="Tambah Transaksi"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/close_background"
            android:backgroundTint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/close_desc_layout"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/background_item_rv"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_add"
            android:elevation="1dp"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/income" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"

                android:fontFamily="@font/commissioner_bold"
                android:text="PEMASUKAN"
                android:textSize="21dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Label"
                android:fontFamily="@font/ubuntu_medium"
                android:layout_marginStart="10dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/labelLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:elevation="1dp"

                app:hintEnabled="false"
                android:padding="2dp"
                app:boxStrokeWidth="0dp"

                app:boxStrokeWidthFocused="0dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/labelInput"

                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/background_detail"
                    android:drawableStart="@drawable/label_selector"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Label"
                    android:inputType="text"
                    android:maxLines="1"
                    android:elevation="1dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominal"
                android:fontFamily="@font/ubuntu_medium"
                android:layout_marginStart="10dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/amountLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:clipChildren="false"

                app:hintEnabled="false"
                android:padding="2dp"

                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/amountInput"
                    android:layout_margin="1dp"
                    android:hint="Nominal"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:drawableStart="@drawable/money_selector"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/ubuntu"
                    android:inputType="numberDecimal|numberSigned"
                    android:background="@drawable/background_detail"
                    android:maxLines="1"
                    android:elevation="1dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/ubuntu_medium"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descriptionLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:clipChildren="false"

                app:hintEnabled="false"
                android:padding="2dp"

                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Deskripsi"
                    android:background="@drawable/background_detail"
                    android:drawableStart="@drawable/description_selector"
                    android:drawablePadding="12dp"
                    android:layout_margin="1dp"
                    android:fontFamily="@font/ubuntu"
                    android:inputType="text"
                    android:maxLines="1"
                    android:elevation="1dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/ubuntu_medium"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="250dp"
                android:layout_height="60dp"

                android:clipChildren="false"
                android:clipToPadding="false"

                app:hintEnabled="false"
                android:padding="2dp"

                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dateInput"
                    android:layout_width="match_parent"
                    android:hint="Tanggal"
                    android:layout_margin="1dp"
                    android:layout_height="55dp"
                    android:background="@drawable/background_detail"
                    android:drawableStart="@drawable/ic_date"
                    android:drawablePadding="12dp"
                    android:focusable="false"
                    android:fontFamily="@font/ubuntu"
                    android:inputType="text"
                    android:maxLines="1"
                    android:elevation="1dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>



    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addTransactionButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/linearLayout"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_btn"
        android:clipToOutline="false"
        android:elevation="3dp"
        android:fontFamily="@font/commissioner_bold"
        android:padding="5dp"
        android:text="Tambah"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>